<%include partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img src="<%=blog.image%>" class="ui centered rounded image">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <h4><%-blog.body%></h4>
            </div>
            <a href="/blogs/<%= blog._id%>/edit" class="ui button basic orange">Edit</a>
            <form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST" id="delete">
                <button class="ui button red basic">Delete</button>
            </form>
        </div>
    </div>



    </div>
<%include partials/footer%>